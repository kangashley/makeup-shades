header
	z-index set-index('overlay')
	position absolute
	top 0
	left 0
	width 100%
	background-color $off-black
	height 50px
	+mq('bp-4')
		height auto

	a.logo
		display block
		border none
		margin 0 auto
		max-width 6rem
		+mq('bp-4')
			margin 1rem auto
			max-width 9rem

		svg
			display block
			width 100%
			fill white
