  .founders-table
    display flex
    flex-direction column
    max-width 30rem
    margin 0 auto
    text-transform capitalize
    font-family Nunito, sans-serif

    &-header
      font-weight 600
      font-size 20px
      margin 0.5rem auto

    .columns
      display flex
      flex-direction row
      align-items: flex-start
      justify-content: space-around

      .bipoc-white
        .bipoc-title
          border 2px solid #f4cca8
          padding 0.1rem 0.4rem
          background-color lighten(#f4cca8, 10)
          border-radius 255px 25px 225px 25px/25px 225px 25px 255px;

      .bipoc-bipoc
        .bipoc-title
          border 2px solid #894f29
          padding 0.1rem 0.4rem
          background-color rgba(137, 79, 41, 0.4)
          border-radius 255px 25px 225px 25px/25px 225px 25px 255px;

      .bipoc-column

        .bipoc-title
          text-align: center
          text-transform capitalize
          font-weight 600
          margin 1rem 0
          //border-bottom 1px solid red

        .bipoc-list
          margin-left 0 !important
          li
            text-align center
            padding-left 0
            margin-left 0
            font-size 14px
            line-height 1



