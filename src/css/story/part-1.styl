#part-1
  .text-content
    max-width $column-width
    margin 0 auto

    .section-head
      padding 0 1rem
      //set-type-size('x-large', true)//font-weight 600

      .part
        text-transform uppercase
        font-weight 600
        color white
        background-color $boxing-red
        padding 0.25rem 0.5rem
        border-radius 5px

    .section-sub
      padding 0 1rem
      font-size 28px

  .measurement
    margin 1rem 1rem 2rem
    border 2px solid $boxing-red
    //outline 2px solid $boxing-red
    border-radius 255px 15px 225px 15px/15px 225px 15px 255px;
    background-color lighten($boxing-red, 45)
    padding 1rem 2rem

    &-title
      margin 0.25rem 0.5em 1rem
      font-weight 600
      set-type-size('small', true)
      text-transform capitalize
      //color $gray-dark

    &-steps
      list-style-type square
      //color $gray-dark
      li
        set-type-size('small', true)
        margin-bottom 0.5em
        padding-left 0.5em
  .fenty-mufe
    .scroll
      display flex
      flex-direction row
      justify-content: flex-end
      align-items: flex-start
      position relative
      margin-bottom 5rem

      &-text
        max-width 30rem
        position relative
        padding 0 1rem
        //width 40%
        margin-right 2rem

        .step
          margin 2rem auto
          display flex
          align-items center

          .winnerHighlight
            background-color $boxing-yellow
            padding 0.1rem 0.3rem
            border-radius 5px

      &-graphic
        position: -webkit-sticky;
        position: sticky;
        top 1rem
        bottom auto
        transform translate3d(0, 0, 0)

        // &.is-fixed
        //   position fixed
        //
        // &.is-bottom
        //   bottom 0
        //   top auto

        .chart
          position absolute
          //margin-left 2rem
          //left 1rem
          top 50%
          -moz-transform: translateY(-50%);
          -webkit-transform: translateY(-50%);
          transform: translateY(-50%);

        // .h2h
        //   position absolute
        //   right 1rem
        //   top 50%

        .graphic-hed
          max-width $column-width
          margin 0 auto

          .graphic-title
            text-transform uppercase
            font-size 14px
            margin-bottom 0
            margin-top 0

          .graphic-sub
            font-size 20px
            font-weight 600
            margin-top 0
            text-transform capitalize

          .graphic-legend
            set-type-size('x-small', true)
            color $gray
            text-transform uppercase
            margin 0.5rem 0 1.5rem

            #winner
              background-color $boxing-yellow
              color $off-black
              font-weight 600
              padding 0.2rem 0.5rem
              border-radius 5px
              margin-right 0.2rem
              set-type-size('x-small', true)


  .disclaimer
    margin 2rem 1rem
    //background-color lighten(#fde9de, 2.5)
    border 2px solid blue
    padding 1rem 2rem 0.5rem
    border-radius 255px 15px 225px 15px/15px 225px 15px 255px;
    background-color rgba(0, 0, 255, 0.2)
    padding 1rem 2rem

    &-title
      margin 0.25rem 0 1rem
      font-weight 600
      set-type-size('small', true)
      text-transform capitalize

    &-text
      margin 0 0 1rem
      set-type-size('small', true)

  .definition
    margin 1rem
    //background-color #583218
    //color white
    border 2px solid $boxing-yellow
    padding 0.5rem 1rem
    set-type-size('small', true)
    border-radius 255px 25px 225px 25px/25px 225px 25px 255px;
    background-color lighten($boxing-yellow, 35)
    //padding 1rem 2rem

  .part1-conclusion
    max-width $column-width

    .conclusion-title
      padding 0 1rem
      font-weight 600

    ul
      padding 1rem 1rem 0.5rem
      margin-left 0.75rem
      line-height 1.25
      margin-top 1rem
      margin-bottom 1rem
      border-top 1px solid #fde9de
      border-bottom 1px solid #fde9de

      li
        margin-left 1rem
        padding-left 0
        margin-bottom 1rem

   // .founders-table-header
   //    font-style italic
   //    margin-top 1.5rem
  .founders-table
    display flex
    flex-direction column
    max-width 30rem
    margin 0 auto
    text-transform capitalize

    &-header
      font-weight 600
      font-size 20px
      margin 0.5rem auto

    .columns
      display flex
      flex-direction row
      align-items: flex-start
      justify-content: space-around

      .bipoc-white
        .bipoc-title
          border 2px solid #f4cca8
          padding 0.1rem 0.4rem
          background-color lighten(#f4cca8, 10)
          border-radius 255px 25px 225px 25px/25px 225px 25px 255px;

      .bipoc-bipoc
        .bipoc-title
          border 2px solid #894f29
          padding 0.1rem 0.4rem
          background-color rgba(137, 79, 41, 0.4)
          border-radius 255px 25px 225px 25px/25px 225px 25px 255px;

      .bipoc-column

        .bipoc-title
          text-align: center
          text-transform capitalize
          font-weight 600
          margin 1rem 0
          //border-bottom 1px solid red

        .bipoc-list
          margin-left 0 !important
          li
            text-align center
            padding-left 0
            margin-left 0
            font-size 14px
            line-height 1



