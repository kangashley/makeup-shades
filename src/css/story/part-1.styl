.part1-conclusion ul li.check::before {
  content: '✅';
  font-size: 0.8rem;
  display: block;
  height: 0;
  width: 0;
  left: -1.5rem;
  top: 0.25rem;
  position: relative;
}
.part1-conclusion ul li.cross::before {
  content: '❌';
  font-size: 0.8rem;
  display: block;
  height: 0;
  width: 0;
  left: -1.5rem;
  top: 0.25rem;
  position: relative;
}
