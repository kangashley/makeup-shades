#part-1
  .text-content
    max-width $column-width
    margin 0 auto

    .section-head
      padding 0 1rem
    .section-sub
      padding 0 1rem

  .measurement
    margin 2rem 1rem
    background-color lighten(#fde9de, 2.5)
    padding 1rem 2rem

    &-title
      margin 0.25rem 0.5em 1rem
      font-weight 600
      set-type-size('small', true)

    &-steps
      list-style-type square
      li
        set-type-size('small', true)
        margin-bottom 0.5em
        padding-left 0.5em
  .fenty-mufe
    .scroll
      display flex
      flex-direction row
      justify-content: flex-end
      position relative

      &-text
        max-width 20rem
        position relative
        padding 0 1rem
        width 33%
        margin-right 2rem

        .step
          margin 2rem auto
          display flex
          align-items center

          .winnerHighlight
            background-color $primary
            padding 0.1rem 0.3rem
            border-radius 5px

      &-graphic
        position absolute
        top 0
        bottom auto
        transform translate3d(0, 0, 0)

        &.is-fixed
          position fixed

        &.is-bottom
          bottom 0
          top auto

        .chart
          position absolute
          //margin-left 2rem
          //left 1rem
          top 50%
          -moz-transform: translateY(-50%);
          -webkit-transform: translateY(-50%);
          transform: translateY(-50%);

        // .h2h
        //   position absolute
        //   right 1rem
        //   top 50%

        .graphic-hed
          max-width $column-width
          margin 0 auto

          .graphic-title
            text-transform uppercase
            set-type-size('xx-small', true)
            margin-bottom 0
            margin-top 0

          .graphic-sub
            set-type-size('large', true)
            font-weight 600
            margin-top 0

          .graphic-legend
            set-type-size('x-small', true)
            color $gray
            text-transform uppercase
            margin 0.5rem 0 1.5rem

            #winner
              background-color $primary
              color $off-black
              font-weight 600
              padding 0.2rem 0.5rem
              border-radius 5px
              margin-right 0.2rem
              set-type-size('x-small', true)


  .disclaimer
    margin 2rem 1rem
    background-color lighten(#fde9de, 2.5)
    padding 1rem 2rem 0.5rem

    &-title
      margin 0.25rem 0 1rem
      font-weight 600
      set-type-size('small', true)

    &-text
      margin 0 0 1rem
      set-type-size('small', true)

  .definition
    margin 1rem
    background-color #583218
    color white
    padding 1rem 

  .part1-conclusion
    max-width $column-width

    .conclusion-title
      padding 0 1rem
      font-weight 600

    ul
      padding 0 1rem
  .founders-table-header
    font-style italic
    margin-top 2.5rem
  .founders-table
    margin-top -2rem
    margin-bottom 2.5rem
    margin-left 1rem
    margin-right 1rem
    .bipoc-title
      margin-bottom 0.5rem
      display inline-block
      padding-bottom 0.125rem
      font-style italic
    .bipoc-white, .bipoc-bipoc
      width 48%
      display inline-block
      vertical-align top
    .bipoc-white
      .bipoc-title
        border-bottom 1px solid #f4cca8
    .bipoc-bipoc
      .bipoc-title
        border-bottom 1px solid #894f29