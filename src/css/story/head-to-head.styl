.h2h
  max-width 30rem
  //margin 0 auto
  display flex
  flex-direction row
  align-items flex-start
  justify-content flex-start

  .bin-brand
    display flex
    justify-content flex-start
    align-items center;
    flex-direction column
    padding-bottom 1px
    margin 5px 0
    width 150px

    &-0
      order 1
      margin-right 0

      .bin-swatchGroup
        margin-left 0.5rem

      .bin-category
        &.spread
          border-left 1px solid #eee

    &-1
      order 3
      margin-left 0

      .bin-count
        order 0

      .bin-swatchGroup
        order 1
        margin-right 0.5rem

      .bin-category
        &.spread
          border-right 1px solid #eee


    .bin-category
      width 100%
      display flex
      flex-direction row
      align-items flex-end;
      justify-content space-between
      //height 5px

      &.spread
        //height 45px
        border-top 1px solid #eee
        border-bottom 1px solid #eee
        //margin 2px
        padding-bottom 2px


        .bin-count
          display inline-block
          align-self center
          margin 0 0.5rem
          set-type-size('small', true)
          font-weight 600
          //width 20px
          text-align center
          padding 0.2rem 0.5rem

          &-winner
            background-color $primary

          &-zero
            color $gray-light


      .bin-swatchGroup
        display flex
        flex-direction column
        justify-content flex-end;
        align-items flex-end;

        .bin-swatch
          margin 0.5px auto
          border-radius 3px
          display relative

  .bin-vsGroup
    order 2
    display flex
    justify-content center
    align-items center
    flex-direction column
    padding 2px 0
    margin 5px 0

    .bin-vsCat
      border-top 1px solid #eee
      border-bottom 1px solid #eee
      margin 2px 0
      padding-bottom 2px
      display flex
      justify-content center
      align-content center
      flex-direction column

      &-0
        visibility hidden

      .bin-vs
        set-type-size('small', true)
        color $gray



  .bin-labelGroup
    order 0
    display flex
    justify-content center
    align-items center
    flex-direction column
    padding 2px
    margin 5px 0.25rem

    .bin-labelTGroup
      display flex
      flex-direction column
      justify-content: center
      height 55px
      margin 2px 0

      text
        text-align center
        set-type-size('xx-small', true)
        text-transform uppercase
        color $gray
        line-height: 1.33

    .bin-labelCat
      height 45px
      margin 2px 0
      padding-bottom 2px
      display flex
      justify-content center
      align-content center
      flex-direction column

      .bin-label
        set-type-size('x-small', true)
        color $gray

  .bin-brandTGroup
    display flex
    flex-direction column
    justify-content: center
    height 55px
    margin 2px 0

    text
      text-align center

    .bin-brandTitle
      font-weight 600

    .bin-brandProduct
      set-type-size('x-small', true)

    .bin-brandTotal
      set-type-size('xx-small', true)
      color $gray
      text-transform uppercase
