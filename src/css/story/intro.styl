.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	// background linear-gradient(#583218, #894f29, #ac7752, #d59d6d, #f4cca8, #fde9de, #ffffff);

	&__hed
		max-width 60rem
		margin 0 auto
		padding-top 5rem
		font-weight 400
		text-align center
		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
		+mq('bp-5')
			set-type-size('xxxx-large', true)
		color #000
		text-shadow 2px 2px 2px #f4cca8

	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 5rem
		padding-bottom 1.5rem
		text-align center
		set-type-size('small', true)

	&__dek
		max-width $column-width
		font-weight bold
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)

	.by-line-sep
		color blue
		font-weight 600
		margin 0 0.5rem
