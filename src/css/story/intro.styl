.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	// background linear-gradient(#583218, #894f29, #ac7752, #d59d6d, #f4cca8, #fde9de, #ffffff);

	&__hed
		max-width $column-width
		margin 0 auto
		padding-top 2rem
		font-weight 600
		text-align center
		text-transform uppercase
		line-height 0.85 !important
		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
		+mq('bp-5')
			font-size 100px

			#beauty
				color #eb0c13
				letter-spacing: -2px
			#brawl
				color blue
				letter-spacing 6px
		//color #eb0c13
		//text-shadow 0px 0px 1px #f4cca8, 1px 1px 1px #f4cca8, 2px 2px 1px #f4cca8

	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 3rem
		padding-bottom 0.5rem
		text-align center
		set-type-size('small', true)
		line-height 2
	&__credit
		color #666

	&__dek
		font-weight bold
		margin 1rem auto
		padding-top 1rem
		text-align center
		set-type-size('large', true)
		line-height 1.33
		max-width $column-width
		+mq('bp-3')
			max-width 12rem
		+mq('bp-5')
			max-width 20rem

	.by-line-sep
		color blue
		font-weight 600
		margin 0 0.5rem

	&__date
		set-type-size('x-small', true)
		font-weight 600
		color #666
		max-width $column-width
		margin 2rem auto 0
		text-align center
.coverimage1
	position absolute
	left 0
	max-width 5.5rem
	top -2rem
	+mq('bp-3')
		max-width 7rem
		top 6rem
	+mq('bp-5')
		left -0.25rem
		max-width 15rem
		top -2.5rem
.coverimage2
	position absolute
	right 0
	max-width 5.75rem
	top -2rem
	+mq('bp-3')
		max-width 7.5rem
		top 6rem
	+mq('bp-5')
		max-width 15.5rem
		top -2.5rem
