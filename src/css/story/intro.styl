.intro
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem

	// background linear-gradient(#583218, #894f29, #ac7752, #d59d6d, #f4cca8, #fde9de, #ffffff);

	&__hed
		max-width 60rem
		margin 0 auto
		padding-top 5rem
		font-weight 400
		text-align center
		set-type-size('xx-large', true)
		+mq('bp-3')
			set-type-size('xxx-large', true)
		+mq('bp-5')
			set-type-size('xxxx-large', true)
		color red
		text-shadow 0px 0px 1px #f4cca8, 1px 1px 1px #f4cca8, 2px 2px 1px #f4cca8 

	&__byline
		max-width $column-width
		margin 0 auto
		padding-top 5rem
		padding-bottom 1.5rem
		text-align center
		set-type-size('small', true)
		line-height 2
	&__credit
		color #666

	&__dek
		font-weight bold
		margin 0 auto
		padding-top 1.5rem
		text-align center
		set-type-size('medium', true)
		max-width $column-width
		+mq('bp-3')
			max-width 12rem
		+mq('bp-5')
			max-width $column-width

	.by-line-sep
		color blue
		font-weight 600
		margin 0 0.5rem

.coverimage1
	position absolute
	left 0
	max-width 5.5rem
	top -2rem
	+mq('bp-3')
		max-width 7rem
		top 6rem
	+mq('bp-5')
		left -0.25rem
		max-width 15rem
		top -2.5rem
.coverimage2
	position absolute
	right 0
	max-width 5.75rem	
	top -2rem
	+mq('bp-3')
		max-width 7.5rem
		top 6rem
	+mq('bp-5')
		max-width 15.5rem
		top -2.5rem
