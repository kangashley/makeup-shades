.brawl
  //max-width 30rem
  //margin 0 auto
  display flex
  flex-direction row
  align-items flex-start
  justify-content center

  .bin-brand
    order 2
    display flex
    justify-content flex-start
    align-items center;
    flex-direction column
    padding-bottom 1px
    margin 5px 0
    max-width 52px

    &-pf
      order 1
      margin-right 1.2rem

      .bin-brandTitle
        color #00f

      .bin-brandProduct
        color lighten(#00f, 30) !important

    .bin-category
      width 44px
      display flex
      align-items flex-start;
      justify-content space-between
      border 1px solid lighten($gray-light, 5)
      //background-color #eee
      border-radius 2px
      padding 1px
      height 44px
      margin 4px 2px
      box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.1), 0 3px 10px 0 rgba(0, 0, 0, 0.1)

      .bin-swatchGroup
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content flex-start;
        align-items flex-start;

        .bin-swatch
          margin 1px
          border-radius 2px
          display relative

      .bin-numGroup
        width 40px
        height 40px
        display flex
        justify-content center
        align-items center
        position absolute

        .bin-num
          &-0
            color $gray-light


  .bin-vsGroup
    order 2
    display flex
    justify-content center
    align-items center
    flex-direction column
    padding 2px 0
    margin 5px 0

    .bin-vsCat
      border-top 1px dashed $gray-light
      border-bottom 1px dashed $gray-light
      margin 2px 0
      padding-bottom 2px
      display flex
      justify-content center
      align-content center
      flex-direction column

      &-0
        visibility hidden

      .bin-vs
        set-type-size('small', true)
        color $gray



  .bin-labelGroup
    order 0
    display flex
    justify-content center
    align-items center
    flex-direction column
    padding 2px
    margin 5px 0
    transform translate(0, 12px)

    .bin-labelTGroup
      display flex
      flex-direction column
      justify-content: center
      height 50px
      margin 2px 0

      text
        text-align center
        set-type-size('x-small', true)
        color $gray

    .bin-labelCat
      height 44px
      margin 4px 0
      padding-bottom 2px
      display flex
      justify-content center
      align-content center
      flex-direction column

      .bin-label
        set-type-size('xx-small', true)
        color $gray

  .bin-brandTGroup
    display flex
    flex-direction column
    justify-content: flex-end
    height 50px
    margin 10px
    transform rotate(-45deg)
    max-width 40px

    text
      text-align center
      white-space nowrap

    .bin-brandTitle
      set-type-size('small', true)
      font-weight 600

    .bin-brandProduct
      set-type-size('xx-small', true)
      color $gray
      line-height 0.9
      //display none

    .bin-brandTotal
      set-type-size('xx-small', true)
      color $gray
      text-transform uppercase
      display none

      text
        line-height 0.8
