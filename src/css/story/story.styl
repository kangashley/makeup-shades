/* CUSTOM STORY STYLE */

section
  max-width 60rem
  margin 0 auto

.section-head
	font-size 1.5em
	text-align center
.section-sub
	font-weight bold
	margin 1rem 0
.text-content ul
	line-height 1.5
	margin-left 1.25rem
	li
		margin-bottom 0.75rem
		padding-left 0.25rem
.img1
	max-width 12rem
	margin 2rem auto 1rem
	+mq('bp-3')
		max-width 16rem
	+mq('bp-5')
		float right
		margin-left 2rem
		margin-bottom 0.5rem
		margin-right -2rem
		width 33%
		height auto

.divider
	margin 2rem auto
	text-align center
.divider-dot
	display inline-block
	height 0.25rem
	width 0.25rem
	margin 0.5rem
	border-radius 9999px
.dot1
	background-color #583218
.dot2
	background-color #894f29
.dot3
	background-color #ac7752
.dot4
	background-color #d59d6d
.dot5
	background-color #f4cca8
.dot6
	background-color #fde9de
.dot10
	background-color red
.dot11
	background-color blue
.part11img
	margin 1rem auto
	position relative
	z-index 10
.part12img
	margin 0 auto -0.5rem
.part13img
	margin 2rem auto 4rem
.part2img 
	margin 4rem auto 0
	max-width 16rem
.text-content + .comp-brawl
	margin-top 4rem
#part-1 .fenty-mufe + .text-content
	margin-top -4rem
#part-1 .comp-brawl + .text-content,
#part-2 .comp-brawl + .text-content
	margin-top -4rem
a {
	border-color: #ac7752
}
a:visited { 
	border-color: #fde9de
}