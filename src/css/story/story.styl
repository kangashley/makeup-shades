/* CUSTOM STORY STYLE */

section
  max-width 60rem
  margin 0 auto

.section-head
	font-size 1.5em
	text-align center
.section-sub
	font-weight bold
	margin 1rem 0

.emojiface 
	margin: 2rem auto 0
	width: 8rem
	height: auto

.img1
	+mq('bp-3')
		max-width 16rem
		margin auto
	+mq('bp-5')
		float right
		margin-left 2rem
		margin-bottom 0.5rem
		margin-right -4rem
		width 33%
		height auto

.divider
	margin 0 auto 4rem
	text-align center
.divider-dot
	display inline-block
	height 0.25rem
	width 0.25rem
	margin 0.5rem
	border-radius 9999px
.dot1
	background-color #583218
.dot2
	background-color #894f29
.dot3
	background-color #ac7752
.dot4
	background-color #d59d6d
.dot5
	background-color #f4cca8
.dot6
	background-color #fde9de
.dot10
	background-color red
.dot11
	background-color blue
.part12img
	margin 2rem auto
.part2img 
	margin 4rem auto 0
	max-width 16rem

a {
	border-color: #ac7752
}
a:visited { 
	border-color: #fde9de
}