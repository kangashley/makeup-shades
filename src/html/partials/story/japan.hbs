<div class='text-content'>
  {{> story/divider }}

  <p class='section-sub loaded-atlas tk-atlas'>{{copy.part2-1-sub}}</p>

  {{#each copy.part2-1-intro}}
    <p class='prose'>{{{value}}}</p>
  {{/each}}
  <img src='assets/img/round22.jpg' class='part22img'>
  <p class='section-sub tk-atlas'>{{copy.japan-title}}</p>



  {{#each copy.japan-intro}}
    <p class='prose'>{{{value}}}</p>
  {{/each}}
</div>

<div class='scroll-japan comp-brawl' data-competitors='japanese-best'>
  <div class='scroll-graphic comp-brawl_graphic'>
    <div class='chart'>

      <div class='graphic-hed'>
        <p class='graphic-title tk-atlas'>{{{copy.part1-graphic-title}}}</p>
        <p class='graphic-sub tk-atlas'>{{{copy.japan-graphic-sub}}}</p>
        <p class='graphic-legend tk-atlas'>{{{copy.japan-graphic-legend}}}</p>

        <div class='ui brawl-ui'>
          <div class='ui-display'>
            <p class='ui-display_prompt tk-atlas'>Show Me</p>
            <div class='ui-display_button' id='shades' data-competitors='japanese-best' data-action='swatch'>
              <p class='ui-button ui-button_shade tk-atlas'>Shades</p>
            </div>
            <div class='ui-display_button' id='count' data-competitors='japanese-best' data-action='num'>
              <p class='ui-button ui-button_count tk-atlas'>Count</p>
            </div>
          </div>

          <div class='ui-fenty'>
            <label class='toggle'>
              <input type='checkbox' data-competitors='japanese-best'>
              <span class='slider'></span>
            </label>

            <p class='ui-fenty_prompt tk-atlas'>Compare to Fenty</p>
          </div>
        </div>
      </div>

      <div class='brawl brawl-japan' data-competitors='japanese-best'>
      </div>

    </div>
  </div>

  <div class='scroll-text'>
    {{#each copy.steps-japan}}
      <div class='step' data-step='{{stepNumber}}'>
        <p>{{{text}}}</p>
      </div>
    {{/each}}
  </div>

</div>
